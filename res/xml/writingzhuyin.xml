<LinearLayout>




<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"	
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height_5row"
    >
	<Row>
	<Key android:codes="711" android:keyLabel="ˇ"/>
	<Key android:codes="715" android:keyLabel="ˋ"/>
	<Key android:codes="714" android:keyLabel="ˊ"/>
	<Key android:codes="729" android:keyLabel="˙"/>
	</Row>
    <Row  android:rowEdgeFlags="bottom" android:keyHeight="@dimen/key_height_bottom_row" >
        <Key android:codes="-200" android:keyLabel="@string/label_english" android:keyWidth="12%p"/>
         <Key  android:codes="-123" android:keyLabel="@string/label_handwrite" 
                 android:keyWidth="11%p"/>
        <Key android:codes="-2" android:keyLabel="123" android:keyWidth="12%p"
                android:isSticky="true" android:isModifier="false"/>
        <!-- 65292 = Full-width Comma -->
        <Key android:codes="65292" android:keyWidth="10%p"
                android:keyLabel="，"
                android:iconPreview="@drawable/comma_popup_icon"
                android:popupKeyboard="@xml/popup_punctuation_ch"/>
        <Key android:codes="32" android:keyIcon="@drawable/space_icon" 
                android:iconPreview="@drawable/space_popup_icon"
                android:keyWidth="18%p" android:isRepeatable="true"/>
        <Key android:codes="-5" android:keyIcon="@drawable/delete_icon"
                android:iconPreview="@drawable/delete_popup_icon"
                android:keyWidth="13%p" android:isRepeatable="true"/>
        <Key android:codes="10" android:keyIcon="@drawable/enter_icon"
                android:iconPreview="@drawable/enter_popup_icon" 
                android:keyWidth="13%p"  android:keyEdgeFlags="right" />
               
                
    </Row>
   </Keyboard>
</LinearLayout>